<table id="grade-table" class="table table-sm table-striped table-responsive">

	<tr>
		<th>Name</th>
		<th><%= bootstrap_icon 'document-text' %></th>
		<th><%= bootstrap_icon 'alert-triangle-fill' %></th>
		<th>Days</th>
		<% if params[:totals] == 'true' %>
		<th>Total</th>
		<% end %>
		<th class="rotate">Spoken</th>
		<% if params[:status] == 'registered' %>
		<th class="rotate">Start date</th>
		<% end %>
		<th>Latest</th>
		<% @psets.each do |pset| %>
		<th>
			<%= link_to_if current_user.admin?, pset.name[0..2], publish_schedule_grades_path(schedule_slug: current_schedule.slug, pset_id: pset.id), method: :post, data: { confirm: "Publish all grades for this assignment?" }, title: pset.name %>
		</th>
		<% end %>
	</tr>

	<% users.each do |group, user_list|%>
	<tr>
		<td colspan="7"><%= group ? "#{group.name} (#{user_list.size})" : "Groupless" %></td>
		<% @psets.each do |pset| %>
		<th>
			<%= link_to_if current_user.admin?, pset.name[0..2], reopen_schedule_grades_path(schedule_slug: current_schedule.slug, pset_id: pset.id, group_id: group.id), method: :post, data: { confirm: "Re-open all grades for this assignment for this group?" }, title: pset.name, class: 'text-light' %>
		</th>
		<% end %>
	</tr>

	<% user_list.each do |user| %>
	<% cache [user, :head_overview] do %>
	<tr <%= 'class=table-warning' if user.stagnated? %>>
		<td>
			<%= link_to user.name, user, remote: true, data: { toggle: "modal", target: "#modal-browser" } %>
			<% if user.last_known_location %>
			<span aria-hidden="true" data-toggle="tooltip" title="<%= user.last_known_location %>">L</span>
			<% end %>
		</td>
		
		<td></td>
		
		<td>
			<% if user.alarm %>
			<%= bootstrap_icon 'alert-triangle-fill' %>
			<% end %>
		</td>
		
		<td class="bar"><%= user.attendance %></td>
		
		<% if params[:totals] == 'true' %>
		<td><%= user.attendance_records.count %></td>
		<% end %>
		
		<td><%= user.hands.where(success:true).count %></td>
		
		<% if params[:status] == 'registered' %>
		<td><%= user.started_at.strftime("%e %b") if user.started_at %></td>
		<% end %>
		
		<td><%= time_ago_in_words(user.last_submitted_at) if user.last_submitted_at %></td>

		<% 
		subs = user.submits.group_by(&:pset_id)
		%>

		<% @psets.each do |pset| %>
		<td>
			<%= grade_button(user, pset, subs)%>
		</td>
		<% end %>

	</tr>
	<% end %>
	<% end%>

	<% end %>

</table>
