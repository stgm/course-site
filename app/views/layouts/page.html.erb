<% content_for :content do %>
<ul id="page-tabs" class="nav">
    <% if !@only_submit %>
    <li class="nav-item">
        <a class="nav-link <%= 'active' if action_name == 'index' || action_name == 'syllabus' %>"
            aria-current="page" href="/<%= params[:slug] %>">
            <%= bootstrap_icon 'clipboard-check' %> Inhoud
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link <%= 'active' if action_name == 'questions' || action_name == 'questions_syllabus' %>"
            href="/q/<%= params[:slug] %>">
            <%= bootstrap_icon 'patch-question' %> Hulp
        </a>
    </li>
    <% end %>
    <% if @page.pset %>
    <li class="nav-item">
        <a class="nav-link <%= 'active' if action_name == 'submit' %>"
            href="/s/<%= params[:slug] %>">
            <%= bootstrap_icon 'box-seam' %> Submit
            <% if @submit && @submit.submitted_at %>
            <%= bootstrap_icon 'patch-check-fill', swidth: '16', sheight: '16', style: 'margin-left: 1rem' %>
            <% end %>
        </a>
    </li>
    <% end %>
</ul>
<%= yield %>
<% end %>
<%= render template: "layouts/sidebar" %>
