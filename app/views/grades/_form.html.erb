<%= form_with model: @grade, html: { id: 'grade-form', class: 'grade-form', style: 'min-height:100%' } do |f| %>

	<%= hidden_field_tag :commit, :autosave %>
	<%= f.hidden_field :submit_id %>
	<%#= f.hidden_field :grader_id %>

	<% if @grade.grader != current_user && @grade.updated_at && @grade.updated_at > 10.minutes.ago %>
	<div class="alert alert-warning mx-n3 px-3 mb-3 small"><%= @grade.grader_name %> was editing this <%= time_ago_in_words(@grade.updated_at) %> <%= t(:ago) %></div>
	<% end %>

	<% if @grade.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

		<ul>
			<% @grade.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<% if not @submit.url.blank? %>
	<div class="form-group">
		<label for="" class="control-label">Link</label>
		<p class="form-control-static">
			<%= link_to @submit.url, @submit.url %>
		</p>
	</div>
	<% end %>

	<div class="form-group">
		<span class="float-right" data-toggle="tooltip" title="Use bullets * to separate points. Use `backticks` to insert code."><%= bootstrap_icon 'question-fill'%></span>
		<label for="grade_comments" class="control-label">Focus points </label>
		<%= f.text_area :comments, class: 'form-control', rows: 10, autofocus:true %>
	</div>
	
	<div class="form-group">
		<label for="grade_notes" class="control-label">Internal notes </label>
		<%= f.text_area :notes, class: 'form-control', rows: 3 %>
	</div>

	<div id="grade-boxes" class="d-flex flex-wrap">
		<% if @submit.pset.config && @submit.pset.config['subgrades'] %>
		<% @submit.pset.config['subgrades'].each do |subgrade_name, subgrade_type| %>
		<% if subgrade_type == 'integer' || subgrade_type == 'float' %>
		<div class="form-group flex-fill">
			<label for="input_<%= subgrade_name %>" class="control-label ml-1 mb-0"><%= subgrade_name.capitalize %><% if @submit.automatic_scores[subgrade_name] %>(<%= @submit.automatic_scores[subgrade_name] %>)<% end %></label>
			<input type="text" class="form-control form-control-sm" id="input_<%= subgrade_name %>" name="grade[subgrades[<%= subgrade_name %>]]" placeholder="" value="<%= @grade.subgrades[subgrade_name] if @grade.subgrades %>">
		</div>
		<% elsif subgrade_type == 'boolean' %>
		<div class="form-group">
			<div class="checkbox">
				<label>
					<%= hidden_field_tag "grade[subgrades[#{subgrade_name}]]", 0 %>
					<%= check_box_tag "grade[subgrades[#{subgrade_name}]]", -1, @grade.subgrades && @grade.subgrades[subgrade_name] && !@grade.subgrades[subgrade_name].zero? %> <%= subgrade_name.humanize %>
				</label>
			</div>
		</div>
		<% end %>
		<% end %>
		<% end %>
	</div>
			
	<% if current_user.admin? || not(@submit.pset.config && @submit.pset.config['subgrades'] && @submit.pset.config['calculation']) %>
	<div class="form-group">
		<label for="grade_grade" class="control-label">Grade
			<% if current_user.admin? && @grade.calculated_grade %>(<%= @grade.calculated_grade %>)<% end %>
		</label>
		<div class="input-group">
			<%= f.text_field :grade, class: 'form-control form-control-sm', value: @grade.grade %>
			<span class="input-group-append">
				<button class="btn btn-primary btn-sm" type="button" id="pass-btn"><small>PASS</small></button>
				<button class="btn btn-primary btn-sm" type="button" id="fail-btn"><small>FAIL</small></button>
			</span>
		</div>
	</div>
	<% end %>
	
	<% if Course.feedback_templates %>
	<div class="form-group">
		<% Course.feedback_templates.each do |f, c| %>
		<%= link_to f.humanize, templatize_grade_path(id: @submit.id, type: f), method: :put, class: "btn btn-light", data: { confirm: "This will insert automatic feedback, sure? \n\n" + c["explanation"] } %>
		<% end %>
	</div>
	<% end %>

	<div class="form-group d-flex mt-auto">
		<% if current_user.admin? || @grade.unfinished? %>
		<%= f.submit 'Save', class: 'btn btn-primary flex-fill' %>
		<% end %>
		<% if current_user.admin? %>
		<%= link_to "Destroy Grade", grade_path(id: @grade.id, referer: request.referer), method: :delete, data: { confirm: "Sure? This deletes the grade completely, including internal info." }, class: 'btn btn-secondary btn-sm ml-1' if @grade.persisted? %>
		<%= link_to "Destroy Submit", submit_path(id: @submit.id, referer: request.referer), method: :delete, data: { confirm: "Sure? This removes proof of student submitting. If you want to delete the grade, just empty text field and save the grade." }, class: 'btn btn-secondary btn-sm ml-1' if @submit %>
		<% end %>
		<% if current_user.admin? && @submit.checkable? %>
		<%= link_to "Re-check", recheck_submit_path(id: @submit.id), method: :post, data: { confirm: "Sure?" }, class: 'btn btn-secondary btn-sm ml-1' if @submit %>
		<% end %>
		<% if current_user.senior? %>
		<% if @grade.persisted? %>
		<%= link_to "Publish", grade_path(id: @grade.id, grade: { status: :published }), method: :put, data: { confirm: "Sure?" }, class: 'btn btn-secondary btn-sm ml-1' %>
		<% end%>
		<% end %>
	</div>

<% end %>

<script>
	var saveTimeout;
	x = document.getElementById('grade-form').elements;
	
	for (item of x)
	{
		item.addEventListener("input", () =>
		{
			document.getElementById('grade-badge').innerHTML = 'unsaved'
			clearTimeout(saveTimeout);  // typing delays autosaving
			saveTimeout = setTimeout(
				function()
				{
					Rails.fire(document.getElementById('grade-form'), 'submit')
					document.getElementById('grade-badge').innerHTML = 'saved'
				},
				500  // this is the autosave interval
			)
		})
	}

	$(document).on('turbolinks:before-cache', function () {
		$('[autofocus]').removeAttr('autofocus')
	})
</script>
