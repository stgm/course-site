<div id="navbar" class="shadow-sm navbar navbar-expand-md flex-wrap column-gap-3">
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
        <span class="navbar-toggler-icon"></span>
    </button>
    
    <%= render 'brand' %>

    <%# additional items as defined by the page template %>
    <%= yield :navbar_items %>

    <%# spacer %>
    <div class="flex-fill"></div>

    <%# default toolbar items %>
    <% if current_user.senior? %>
    <%= render partial: 'search' %>
    <% end %>

    <ul id="navbar_links" class="navbar-nav button-bar collapse navbar-collapse navbarCollapsedContent">
        <%= render 'course_links' %>
        <%= render partial: 'hands_menu' %>
        <%= render 'menu' %>
    </ul>
</div>
