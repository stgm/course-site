<%# min-width:0 is to allow the div to dictate the width for flexboxed children %>
<a href="/" class="navbar-brand d-flex align-items-center p-0 me-auto fw-bold flex-fill  <%= 'logged_in' if logged_in? %>" style="min-width:0;">

    <%= bootstrap_icon "terminal", class: "rounded me-2 flex-shrink-0 p-1 d-none d-md-block", width:32, height:32, style: 'vertical-align:bottom;' %>

    <div id="course-title" class="d-flex flex-column">
        <span><%= Course.long_name %></span>

        <% if logged_in? %>
        <small class="fw-normal fs-6">
            <%= current_user.name %>
            <% if current_user.designation %>
            <%= '&middot;'.html_safe %>
            <%= current_user.designation %>
            <% end %>
        </small>
        <% end %>
    </div>

</a>
