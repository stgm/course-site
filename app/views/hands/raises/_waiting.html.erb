<div style="text-align: center; padding:1em;">
	<h5 style="margin-top:0"><%= t "hands.you_are_number_1_in_line", number: @number %></h5>
	<% if !@question.hint.present? %>
	<img id="waiting-gif" src="" class="mx-auto my-3" style="display: block; max-width: 250px; max-height: 180px;">
	<% else %>
	<hr>
	<%= bootstrap_icon 'robot' %> <br>
	<%= @question.hint %>
	<hr>
	<% end %>
	<%= link_to t("hands.cancel_request"), hands_raise_path, method: :delete, remote: true, class: 'btn btn-warning' %>
</div>
