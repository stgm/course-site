<div style="text-align: center; padding:1em; padding-bottom:0.25em;">
	<% assist = @assist_available.shuffle.first %>
	<h3 style="margin-bottom:0.75em;"><%= @greeting %>!<br> What's your location?</h3>
	<p>Entering your location details ensures that we can find you if we'd like to discuss something.</p>
	<%= form_tag(set_location_hands_raise_path, method: :patch, remote: true) do %>
		<input type="text" name="location" class="form-control" required placeholder="" style="margin-top:0.5em">
		<button id="loc-button" data-loading-text="Just a sec..." type="submit" style="margin-top:0.5em; margin-bottom:0.5em" class="btn btn-sm btn-block btn-warning" name="how" value="hands">That's my location!</button>
	<% end %>
</div>
