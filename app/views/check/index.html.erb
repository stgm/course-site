<div id="content" class="container">

	<h1>Grading list</h1>

	<table class="table table-bordered">
		<tr>
			<th>name</th>
			<th>done</th>
		</tr>
		<% @users.each do |user| %>
		<tr id="td<%= user.login_id %>">
			<td><%= user.name %></td>
			<td>
				<%= link_to 'pass', grade_save_path(grade:{ grade:-1 }, pset_id:@pset.id, user_id:user.id), method: :post, remote: true, onclick:"document.getElementById('td#{user.login_id}').fadeOut()" %> ---
				<%= link_to 'fail', grade_save_path(grade:{ grade:0 }, pset_id:@pset.id, user_id:user.id), method: :post, remote: true, onclick:"document.getElementById('td#{user.login_id}').fadeOut()" %>
			</td>
		</tr>
		<% end %>
	</table>

</div>
