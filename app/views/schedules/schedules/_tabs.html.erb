<% content_for :navbar_items do %>

<div id="schedule-navbar-items" class="d-flex navbar">

	<% if @accessible_schedules.size > 1 %>
	<div class="dropdown">
		<button class="btn btn-light btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<%= @name %>
		</button>
		<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
			<% @accessible_schedules.each do |schedule| %>
			<%= link_to schedule.name, schedule, class: "dropdown-item" + class_if(schedule == @selected_schedule, "active") %> 
			<% end %>
		</div>
	</div>
	<% end %>
	
	<div class="btn-group ml-3" role="group" aria-label="Basic example">
		<%= link_to "Active #{@active_count}", { status: 'active' }, class: 'btn btn-sm' + class_if_else(params[:status] == 'active', 'btn-light', 'btn-outline-light text-light') %>
		<%= link_to "Registered #{@registered_count}", { status: 'registered' }, class: 'btn btn-sm' + class_if_else(params[:status] == 'registered', 'btn-light', 'btn-outline-light text-light') %>
		<%= link_to "Inactive #{@inactive_count}", { status: 'inactive' }, class: 'btn btn-sm' + class_if_else(params[:status] == 'inactive', 'btn-secondary', 'btn-outline-light text-light') %>
		<%= link_to "Done #{@done_count}", { status: 'done' }, class: 'btn btn-sm' + class_if_else(params[:status] == 'done', 'btn-secondary', 'btn-outline-light text-light') %>
	</div>

	<% if current_user.senior? %>
	<div class="btn-group ml-3" role="group">

		<div class="btn-group" role="group">
			<button id="btnGroupDrop1" type="button" class="btn btn-sm btn-outline-light text-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<%= icon 'check' %> <span class="caret"></span>
			</button>
			<div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
				<% if current_user.senior? %>
				<%= link_to 'Publish what\'s done'.html_safe, publish_finished_schedule_grades_path(schedule_slug: @selected_schedule), method: 'post', data: { confirm:'Are you sure?' }, class:"dropdown-item" %>
				<%= link_to 'Publish auto grades...'.html_safe, form_for_publish_auto_schedule_grades_path(schedule_id: @current_module_id), class:"dropdown-item" %>
				<% end %>
				<% if current_user.admin? %>
				<%= link_to 'Publish my grades, even if not done'.html_safe, publish_my_schedule_grades_path(schedule_id: @current_module_id), method: 'post', data: { confirm:'Are you sure?' }, class:"dropdown-item"  %>
				<%= link_to 'Publish everything that\'s a valid grade'.html_safe, publish_all_schedule_grades_path(schedule_id: @current_module_id), method: 'post', data: { confirm:'DANGEROUS, this even publishes stuff that is not done. Are you sure?' }, class:"dropdown-item"  %>
				<% if Schedule.any? %>
				<div class="dropdown-divider"></div>
				<%= link_to 'Notify students who did not submit yet'.html_safe, form_for_missing_schedule_submits_path(schedule_id: @current_module_id), class:"dropdown-item", remote: true  %>
				<% end %>
				<% end %>
				<% if current_user.admin? && GradeTools.available? %>
				<div class="dropdown-divider"></div>
				<%= link_to 'Calculate final grades'.html_safe, assign_all_final_schedule_grades_path(schedule_id: @current_module_id), method: :put, data: { confirm:'Are you sure?' }, class:"dropdown-item"  %>
				<% end %>
			</div>
		</div>

		<% if @selected_schedule && current_user.admin? %>
		<div class="btn-group" role="group">
			<button type="button" class="btn btn-sm btn-outline-light text-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<%= icon 'people' %> <span class="caret"></span>
			</button>

			<ul class="dropdown-menu dropdown-menu-right">
				<%= link_to 'Import Groups'.html_safe, new_schedule_import_groups_path(schedule_slug: params[:schedule_slug]), remote:true, class:"dropdown-item" %>
				<%= link_to 'Generate Groups'.html_safe, new_schedule_generate_groups_path(schedule_slug: params[:schedule_slug]), remote:true, class:"dropdown-item" %>
			</ul>
		</div>
		<% end %>

	</div>
	<% end %>
</div>

<% end %>
